# Grabber types detection
# Linux/UNIX platform
unix:!macx {
    SUPPORTED_GRABBERS += X11_GRAB_SUPPORT
}

# Mac platform
macx {
    SUPPORTED_GRABBERS += MAC_OS_CG_GRAB_SUPPORT
}

# Windows platform
win32 {
    # SUPPORTED_GRABBERS += WINAPI_EACH_GRAB_SUPPORT
